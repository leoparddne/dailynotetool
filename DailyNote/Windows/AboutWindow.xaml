<Window x:Class="DailyNote.Windows.AboutWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" Title="关于" Height="450"
        Width="800" FontSize="16">
    <Grid>
        <DockPanel>
            <StackPanel Margin="50 0 0 0" DockPanel.Dock="Left" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Version: " />
                    <TextBlock x:Name="txtVer" />
                </StackPanel>
                <Image Source="/daily.ico" Width="100" Height="100" HorizontalAlignment="Center"/>
            </StackPanel>
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox AcceptsReturn="True" IsEnabled="False" Name="txtTips" Margin="10"></TextBox>
                </ScrollViewer>
                </Grid>
        </DockPanel>
    </Grid>
</Window>
